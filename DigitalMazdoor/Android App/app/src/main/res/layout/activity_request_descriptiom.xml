<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:layout_margin="10dp"
        android:padding="6dp"
        android:background="@drawable/formfieldbackground"

        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:fontFamily="@font/poppins_medium"
                    />


                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="14sp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_regular"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4B000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:fontFamily="@font/poppins_medium"
                    />


                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="14sp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_regular"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4B000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date Of Posting"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:fontFamily="@font/poppins_medium"
                    />


                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date Of Posting"
                    android:textSize="14sp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_regular"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4B000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:fontFamily="@font/poppins_medium"
                    />


                <TextView
                    android:id="@+id/poststatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date Of Posting"
                    android:textSize="14sp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_regular"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4B000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Budget"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:fontFamily="@font/poppins_medium"
                    />


                <TextView
                    android:id="@+id/budget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date Of Posting"
                    android:textSize="14sp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_regular"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4B000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivery In Days"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:fontFamily="@font/poppins_medium"
                    />


                <TextView
                    android:id="@+id/deliverydays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date Of Posting"
                    android:textSize="14sp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_regular"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4B000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:fontFamily="@font/poppins_medium"
                    />


                <TextView
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="14sp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_regular"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4B000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bids"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:fontFamily="@font/poppins_medium"
                    />


                <TextView
                    android:id="@+id/bids"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="14sp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_regular"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4B000000"
                    />

                <Button
                    android:id="@+id/viewrequest"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/bg_button"
                    android:layout_marginTop="20dp"
                    android:textColor="#fff"
                    android:text="View Recieved Offers"
                    android:textStyle="bold"

                    />
                <Button
                    android:layout_margin="20dp"
                    android:id="@+id/delete_btn"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#fff"
                    android:text="Delete Request"
                    android:textStyle="bold"
                    android:background="@drawable/redbg"
                    />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        />
    </LinearLayout>

</FrameLayout>