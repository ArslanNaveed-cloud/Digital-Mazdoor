<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#4F000000"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="aust.fyp.pk.project.application.digitalmazdoor.PlaceOrder">

   <LinearLayout
       android:layout_gravity="center"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="10dp"
       android:weightSum="10"
       android:layout_margin="20dp"
       android:background="@drawable/backfordashboarditem"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:textColor="@color/colorPrimary"
               android:textAlignment="center"
               android:textSize="16sp"
               android:text="Decided Time"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_marginBottom="10dp"
               android:background="@drawable/backgroundforgigsitem"
               android:orientation="horizontal"
               android:padding="5dp"
               android:weightSum="10">


               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/time"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="6.75"
                   android:background="@null"
                   android:hint="Enter Decided Days"
                   android:inputType="phone"
                   android:textColor="#000"
                   app:hintEnabled="false" />
           </LinearLayout>


           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:textColor="@color/colorPrimary"
               android:textAlignment="center"
               android:textSize="16sp"
               android:text="Decided Budget"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_marginBottom="10dp"
               android:background="@drawable/backgroundforgigsitem"
               android:orientation="horizontal"
               android:padding="5dp"
               android:weightSum="10">


               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/budget"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="6.75"
                   android:background="@null"
                   android:hint="Enter Decided Budget"
                   android:inputType="phone"
                   android:textColor="#000"
                   app:hintEnabled="false" />

           </LinearLayout>


           <Button
               android:id="@+id/placeorder"
               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:background="@drawable/bg_button"
               android:text="Place Order"
               android:textColor="#fff"
               />
       </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            />
    </LinearLayout>

</FrameLayout>